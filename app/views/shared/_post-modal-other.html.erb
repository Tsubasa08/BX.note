<div id="panel3" class="panel">
  <p class="label-title label-title--3">その他</p>
    <%= form_with(scope: :post, url: posts_path, local: true, class: 'form form--post') do |f| %>
      <% if f.object %>
        <%= render 'shared/error_messages', object: f.object %>
      <% end %>
      <%= render 'shared/user_icon', user: current_user, id_name: 'user-icon', class_name: 'modal-user-icon' %>
        <%= f.text_area :content, class: 'post-form__area', placeholder: '何をシェアする？' %>
        <div class="check-block">
          <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name, class: 'c-check') %>
        </div>

        <div id="form-image--post-other">
          <%= f.label :images, id: 'input-label--post-other', class: 'form__label--post-image' do %>
          <i class="far fa-image"></i>
          <%= f.file_field :images, multiple: true, accept: 'image/jpeg,image/gif,image/png', class: 'image-form form__input--image', data: {id: 'post-other'} %>
          <% end %>
        </div>

        <%= f.hidden_field :genre, value: @genre %>

        <%= f.submit 'シェア', class: "form__button--post disabled", id: 'button-post', disabled: true %>
    <% end %>
</div>