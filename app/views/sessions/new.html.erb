<% provide(:title, 'ログイン') %>
<main class="main-login">
  <div class="form-card form-card--new">
    <h1 class="form-card__title">ログイン</h1>
      <%= form_with(scope: :session, url: login_path, local: true, class: 'form form--login') do |f| %>
        <%= f.email_field :email,  class: 'form__input', placeholder: 'メールアドレス' %>
        <%= f.password_field :password,  class: 'form__input', placeholder: 'パスワード' %>
        <%= link_to "パスワードを忘れた方はコチラ", new_password_reset_path %>
        <%= f.label :remember_me, class: "form__input--rem" do %>
          <%= f.check_box :remember_me %>
          <span>次回から自動的にログイン</span>
        <% end %>
        <%= f.submit 'ログイン', class: "form__button form__button--login" %>
      <% end %>
      <p class="form-border">or</p>
      <%= link_to "Twitter", "/auth/twitter", class: 'twitter-link' %>
  </div>

  <div class="test-user">
    <p class="test-user__title">テストユーザー</p>
    <div class="wrapper">
      <p class="test-user__mail">メールアドレス：<br>kaeru@mail.com</p>
      <p class="test-user__pas">パスワード：<br>password</p>
    </div>
  </div>
</main>