<p class="label-title label-title--1">本の感想</p>

<%= form_with(model: @post, url: post_path, id:"form-post-edit", class: 'form form--post') do |f| %>
  <div class="form__top-block">
    <div class="form__text-area-block">
      <%= render 'shared/user_icon', user: current_user, id_name: 'user-icon', class_name: 'modal-user-icon modal-user-icon--form' %>
      <%= f.text_area :content, class: 'post-form__area', placeholder: '読んだ感想は？' %>
    </div>
    <div class="form__btn-block">
      <div class="form-image">
        <%= f.label :images, id: 'input-label--post-book', class: 'form__label--post-image' do %>
        <i class="far fa-image"></i>
        <%= f.file_field :images, multiple: true, accept: 'image/jpeg,image/gif,image/png', class: 'image-form form__input--image', data: {id: 'post-book'} %>
        <% end %>
        <div id="form-image--post-book" class="file-name-block"></div>
      </div>
      <%= f.submit '保存', class: "form__button--post", id: 'button-post' %>
    </div>
  </div>
  <div id="category-check" class="form__check-block">
    <p id="check-block-title" class="check-block-title">カテゴリー</p>
    <div id="category-list" class="category-list">
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name, class: 'c-check') do |b| %>
      <%= b.label { b.check_box + b.text } %>
      <% end %>
    </div>
  </div>


  <div id="book-select-result" class="book-select-result">
    <img class="book-image" src="<%= post.link_image %>">
    <p class="book-title"><%= post.link_title %></p>
  </div>


  <div class="form__radio-group">
    <p class="title">評価</p>
    <div class="star-group-wrapper">
      <span class="star-group">
        <%= f.radio_button :book_evaluation, "5", class: 'book-radio' %>
        <label for="post_book_evaluation_5" class="railo-label">5</label>
        <%= f.radio_button :book_evaluation, "4", class: 'book-radio' %>
        <label for="post_book_evaluation_4" class="railo-label">4</label>
        <%= f.radio_button :book_evaluation, "3", class: 'book-radio' %>
        <label for="post_book_evaluation_3" class="railo-label">3</label>
        <%= f.radio_button :book_evaluation, "2", class: 'book-radio' %>
        <label for="post_book_evaluation_2" class="railo-label">2</label>
        <%= f.radio_button :book_evaluation, "1", class: 'book-radio' %>
        <label for="post_book_evaluation_1" class="railo-label">1</label>
        <%= f.radio_button :book_evaluation, "0", class: 'book-radio star-cb-clear' %>
        <label for="post_book_evaluation_0" class="railo-label">0</label>
      </span>
    </div>
  </div>
  <%= f.hidden_field :link_url %>
  <%= f.hidden_field :link_title %>
  <%= f.hidden_field :link_image %>
  <%= f.hidden_field :genre, value: post.genre %>
<% end %>


<%= form_with(url: search_book_path, method: :get, id:'search-book-form', class: 'search-book-form') do |f| %>
  <%= f.text_field :content, class: 'search-book-form__textarea post-input-text', placeholder: 'タイトル検索' %>
  <%= f.button id: 'book-serch', class: 'search-book-form__button' do %>
    <i class="fas fa-search"></i>
  <% end %>
<% end %>


