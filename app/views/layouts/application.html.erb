<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/meta_link' %>
  </head> 
  <body>
    <!-- header -->
    <%= render 'layouts/header' %> 
    <!-- header end -->
    <div class="main-container">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert--#{message_type}", id: "alert") %>
      <% end %>

      <% if logged_in? %>
        <%= render 'shared/post-modal' %>
      <% end %>
      
      <%= yield %>


    </div>
      <!-- footer -->
      <% unless action_name == 'edit' %>
       <%= render 'layouts/footer' %>
      <% end %> 
      <!-- footer end -->
      <!-- 
      <%= debug(params) if Rails.env.development? %>
      -->
  </body>
</html>
