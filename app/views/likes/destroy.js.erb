likes = document.getElementsByClassName("like-<%= @post.id %>");
for (i = 0; i < likes.length; i++) {
likes[i].innerHTML = '<%= j(render "posts/like_form", post: @post) %>';
}

likeNum = document.getElementsByClassName("link__num--like");
for (i = 0; i < likeNum.length; i++) {
likeNum[i].innerHTML = '<%= @post.user.likes.count %>';
}